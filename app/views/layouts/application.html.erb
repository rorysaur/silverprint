<!DOCTYPE html>
<html>
<head>
  <title>Silverprint</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-inverse" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">silverprint</a>
    </div>

    <div class="collapse navbar-collapse" id="main-navbar">
      <ul class="nav navbar-nav navbar-left">
        <% if current_user %>
        <li><a href="#">
          <span class="glyphicon glyphicon-home"></span>
        </a></li>
          <li><a href="#new">
            <span class="glyphicon glyphicon-camera"></span>
          </a></li>
          <li><a href="#users">
            <span class="glyphicon glyphicon-user"></span>
          </a></li>
          <li><a href="#favorites">
            <span class="glyphicon glyphicon-heart"></span>
          </a></li>
          <li><a id="fullscreen">
            <span class="glyphicon glyphicon-fullscreen"></span>
          </a></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to(current_user.username,
                        "#users/#{current_user.id}",
                        :class => "username") %>
          </li>
          <li><%= link_to(
                        raw(
                          "<span class=\"glyphicon glyphicon-log-out\"></span>"
                        ),
                        session_url,
                        :method => :delete) %></li>
        <% else %>
          <li><%= link_to "Log in", new_session_url %></li>
          <li><%= link_to "Sign up", new_user_url %></li>
        <% end %>
      </ul>
    </div>
  </nav>
  
  
  <div class="container">
    <div class="row">
      <% if flash[:failure] %>
        <div class="alert alert-danger col-xs-4">
          <%= flash[:failure] %> 
        </div>
      <% end %>
  
      <% if flash[:errors] %>
        <div class="alert alert-danger col-xs-4">
          <ul>
            <% flash[:errors].try(:each) do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  
    <div>
      <%= yield %>
    </div>
    
  </div>

</body>
</html>
