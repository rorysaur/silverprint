<!DOCTYPE html>
<html>
<head>
  <title>Silverprint</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">silverprint</a>
    </div>

    <div class="collapse navbar-collapse" id="main-navbar">
      <ul class="nav navbar-nav navbar-left">
        <% if current_user %>
          <li><%= link_to "Feed", "#" %></li>
          <li><%= link_to "New Photo", "#new" %></li>
          <li><%= link_to "All Users", "#users" %></li>
          <li><%= link_to "<3", "#favorites" %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to current_user.username, "#users/#{current_user.id}" %>
          </li>
          <li><%= link_to "Log out", session_url, :method => :delete %></li>
        <% else %>
          <li><%= link_to "Log in", new_session_url %></li>
          <li><%= link_to "Sign up", new_user_url %></li>
        <% end %>
      </ul>
    </div>
  </nav>
  
  
  <div class="container">
    
    <div>
      <%= flash[:success] if flash[:success] %>
    </div>
    
    <div>
      <%= flash[:failure] if flash[:failure] %>
    </div>
  
    <div>
      <ul>
        <% flash[:errors].try(:each) do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  
    <div>
      <%= yield %>
    </div>
    
  </div>

</body>
</html>
