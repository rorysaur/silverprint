    role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-body">
      <div>
        <button type="button" class="close"
                aria-hidden="true">&times;</button>
      </div>
      <div>
        <input type="file" id="choose"
                name="photo[photo]" accept="image/*">
        
      </div>
      
      <div>
        <i class="fa fa-crop" id="crop"></i>
      </div>
      
      <div class="thumbnail jcrop">
        <img id="preview" src="#">
      </div>
      
      <div>
        <input type="hidden" id="x" name="photo[x]" value="">
        <input type="hidden" id="y" name="photo[y]" value="">
        <input type="hidden" id="width" name="photo[width]" value="">
        <input type="hidden" id="height" name="photo[height]" value="">
